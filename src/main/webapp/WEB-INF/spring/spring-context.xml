<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Init system properties checker - provides useful errors :) -->
	<context:property-placeholder/>

	<!-- Grab the app mode from JVM argument -->
	<bean id="appMode" class="java.lang.String">
		<constructor-arg value="${app.mode}" />
	</bean>

	<!--
	Get an instance of Settings class with default/mode properties injected
	** Properties defined in mode specific properties files (e.g. dev, prod) will override the properties in default.properties
	** Properties defined in properties files need a getter defined in the Settings class before they can be used
	-->
	<bean id="appSettings" class="com.richardhoppes.example.common.Settings">
		<property name="configProperties">
			<bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="propertiesArray">
					<list>
						<bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
							<property name="location" value="classpath:/config/default.properties"/>
						</bean>
						<bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
							<property name="location" value="classpath:/config/#{appMode}.properties"/>
						</bean>
					</list>
				</property>
			</bean>
		</property>
	</bean>

</beans>